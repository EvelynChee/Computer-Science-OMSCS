<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg2"
    tools:context="edu.gatech.seclass.scm.rewardsGetSet">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET CUSTOMER REWARDS"
        android:id="@+id/bRewardGet"
        android:enabled="true"
        android:clickable="true"
        android:onClick="@string/title_activity_rewards_get"
        android:layout_below="@+id/bRewardSet"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET STORE POLICY"
        android:id="@+id/bRewardSet"
        android:clickable="true"
        android:enabled="true"
        android:onClick="@string/title_activity_rewards_set"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp" />

</RelativeLayout>
