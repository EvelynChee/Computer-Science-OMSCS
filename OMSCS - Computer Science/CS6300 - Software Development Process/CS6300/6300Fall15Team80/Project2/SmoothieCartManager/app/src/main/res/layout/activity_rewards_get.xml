<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.scm.rewardsGet">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan QR"
        android:id="@+id/bRewardGetScan"
        android:focusable="false"
        android:enabled="true"
        android:clickable="true"
        android:onClick="handleRewardsGet"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gold Status"
        android:id="@+id/textView2"
        android:layout_above="@+id/editText20"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText20"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_above="@+id/textView3"
        android:layout_alignEnd="@+id/editText26"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Credits"
        android:id="@+id/textView3"
        android:layout_above="@+id/editText21"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText21"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_above="@+id/textView4"
        android:layout_alignEnd="@+id/editText20"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Expiration Date"
        android:id="@+id/textView4"
        android:layout_above="@+id/editText22"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText22"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:layout_alignEnd="@+id/editText21"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText26"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_above="@+id/textView2"
        android:layout_alignEnd="@+id/editText27"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Customer ID"
        android:id="@+id/textView33"
        android:layout_above="@+id/editText26"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText27"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_above="@+id/textView33"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Customer Name"
        android:id="@+id/textView34"
        android:layout_above="@+id/editText27"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>
