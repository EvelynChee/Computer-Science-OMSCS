<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.scm.transactionMain">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/editText9"
        android:layout_alignEnd="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText9"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:textAlignment="textEnd"
        android:layout_below="@+id/editText10"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editText11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price"
        android:id="@+id/textView7"
        android:layout_below="@+id/editText8"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText10"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_toStartOf="@+id/button3"
        android:background="#e7ff42"
        android:hint="ENTER PRICE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Discount"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/editText11"
        android:layout_alignEnd="@+id/textView9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText11"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_toEndOf="@+id/textView32"
        android:maxLength="5"
        android:textAlignment="textEnd"
        android:layout_below="@+id/editText9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Discount Type"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/editText12"
        android:layout_alignEnd="@+id/textView10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText12"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_above="@+id/editText13"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editText11"
        android:layout_below="@+id/textView8"
        android:textSize="15dp"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Final Price"
        android:id="@+id/textView10"
        android:layout_below="@+id/editText12"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText13"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_above="@+id/button5"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:maxLength="5"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Customer Name"
        android:id="@+id/textView32"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText25"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_alignEnd="@+id/editText8"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply Transaction"
        android:id="@+id/button5"
        android:enabled="true"
        android:clickable="true"
        android:onClick="applyTransaction"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignStart="@+id/editText11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText8"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button3"
        android:enabled="true"
        android:clickable="true"
        android:onClick="CalculateFinalPrice"
        android:layout_alignTop="@+id/editText10"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button6"
        android:layout_above="@+id/editText9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScanQR"
        android:id="@+id/button6"
        android:enabled="true"
        android:clickable="true"
        android:onClick="handleCustomerGet"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Customer ID"
        android:id="@+id/textView5"
        android:layout_below="@+id/editText25"
        android:layout_alignParentStart="true" />

</RelativeLayout>
